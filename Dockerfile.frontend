FROM python:3.10-slim

WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application
COPY . .

# Create necessary directories
RUN mkdir -p .streamlit data/streams/drivers

# Create secrets.toml file with the backend service name
RUN mkdir -p .streamlit && \
    echo 'API_BASE = "http://backend:8000"' > .streamlit/secrets.toml

# Expose port for Streamlit
EXPOSE 8501

# Command to run the frontend
CMD ["streamlit", "run", "frontend/dashboard.py", "--server.port=8501", "--server.address=0.0.0.0"]